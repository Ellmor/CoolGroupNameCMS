extends layout

doctype html
html(ng-app="admin")
    head
        title User Admin

    body
    block content
    .container
        .row
            h2 Create New User
        .row(ng-controller="userAdministrationController")

            form(name='createForm' action='/auth/signUp' method='POST')
                .form-group
                    input#name.form-control(type="text" name="name" ng-model="user.username" placeholder="Name")
                .form-group
                    input#password.form-control(type="text" name="password" ng-model="user.password" placeholder="Password")
                button.btn.btn-default(ng-click="createNewUser()" type="submit") Create